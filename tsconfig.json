{
  "compilerOptions": {
      "target": "es2017",
      "lib": [
          "dom",
          "esnext"
      ],
      "noEmit": true,
      "baseUrl": ".",
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "strict": true,
      "noImplicitAny": false,
      "noEmitOnError": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "module": "esnext",
      "moduleResolution": "node",
      "isolatedModules": true,
      "paths": {
        "@/*": ["./src/*"],
      }
  },
  "include": [
      "src/"
  ]
}